SELECT CONVERT(VARCHAR(10), YourDateColumn, 101)       -- mm/dd/yyyy
     + ' ' 
     + CONVERT(VARCHAR(8), YourDateColumn, 108) AS FormattedDate
FROM YourTable;


CREATE TRIGGER trg_My_Test_Table_Audit
ON My_Test_Table
AFTER INSERT, UPDATE
AS
BEGIN
    SET NOCOUNT ON;

    -- Update newly inserted rows (set CreatedDate)
    UPDATE t
    SET t.CreatedDate = GETDATE()
    FROM My_Test_Table t
    INNER JOIN inserted i ON t.PrimaryKey = i.PrimaryKey
    LEFT JOIN deleted d ON d.PrimaryKey = i.PrimaryKey
    WHERE d.PrimaryKey IS NULL;  -- only new rows

    -- Update rows where a specific column (say ColX) is updated (set ModifiedDate)
    UPDATE t
    SET t.ModifiedDate = GETDATE()
    FROM My_Test_Table t
    INNER JOIN inserted i ON t.PrimaryKey = i.PrimaryKey
    INNER JOIN deleted d ON d.PrimaryKey = i.PrimaryKey
    WHERE ISNULL(i.ColX, '') <> ISNULL(d.ColX, ''); -- detect actual change
END;
GO
